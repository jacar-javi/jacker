# LOCAL USER AND PATHS
#========================================================================================================================
PUID=
PGID=
TZ=Europe/Madrid
USERDIR=
DOCKERDIR=
DATADIR=

# NETWORKING
#========================================================================================================================
HOSTNAME=
DOMAINNAME=
PUBLIC_FQDN=
LOCAL_IPS=127.0.0.1/32,10.0.0.0/8,192.168.0.0/16,172.16.0.0/12
CODE_TRAEFIK_SUBNET_IP=192.168.71.253
DOCKER_DEFAULT_SUBNET=192.168.69.0/24
SOCKET_PROXY_SUBNET=192.168.70.0/24
SOCKET_PROXY_IP=192.168.70.254
TRAEFIK_PROXY_SUBNET=192.168.71.0/24
TRAEFIK_PROXY_IP=192.168.71.254
HOST_IS_VM=true

# UFW Firewall
#========================================================================================================================
# Comma separated UFW allow from rules used by assets/03-setup_ufw.sh
# If you make any changes re-run script
# By default we allow SSH from CODE_TRAEFIK_SUBNET_IP so we can ssh to host from terminal
UFW_ALLOW_FROM=
UFW_ALLOW_PORTS=http,https
UFW_ALLOW_SSH=192.168.71.253

# OAUTH
#========================================================================================================================
# OAuth cookie default lifetime: 1 week
OAUTH_COOKIE_LIFETIME=604800
# OAuth cookie refresh interval: 1 hour (refreshes session without re-auth)
OAUTH_COOKIE_REFRESH=3600
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_SECRET=
OAUTH_WHITELIST=

# OAuth2-Proxy Enhanced Settings
#========================================================================================================================
# Provider: google, github, oidc, azure, gitlab, linkedin, facebook
OAUTH_PROVIDER=google
OAUTH_PROVIDER_NAME=Google
# Cookie secret for session encryption (auto-generated if not set)
OAUTH_COOKIE_SECRET=
# Signature key for request signing (auto-generated if not set)
OAUTH_SIGNATURE_KEY=
# Session store: redis (distributed) or cookie (local)
OAUTH_SESSION_STORE=redis
# Email domains to allow (use * for any domain, or specific like example.com)
OAUTH_EMAIL_DOMAINS=*

# Provider-specific settings (optional)
#========================================================================================================================
# Google Admin Email (for Google Workspace domains)
OAUTH_GOOGLE_ADMIN_EMAIL=
# GitHub Organization (for GitHub OAuth)
OAUTH_GITHUB_ORG=
# GitHub Team (for GitHub OAuth)
OAUTH_GITHUB_TEAM=
# OIDC Issuer URL (for generic OIDC providers)
OAUTH_OIDC_ISSUER_URL=
# OIDC JWKS URL (for generic OIDC providers)
OAUTH_OIDC_JWKS_URL=

# LETSENCRYPT
#========================================================================================================================
LETSENCRYPT_EMAIL=

# CROWDSEC
#========================================================================================================================
CROWDSEC_API_PORT=8888
CROWDSEC_TRAEFIK_BOUNCER_API_KEY=
CROWDSEC_IPTABLES_BOUNCER_API_KEY=
CROWDSEC_API_LOCAL_PASSWORD=

# POSTGRESQL
#========================================================================================================================
POSTGRES_DB=crowdsec_db
POSTGRES_USER=crowdsec
POSTGRES_PASSWORD=

# AUTHENTIK (Optional - Self-hosted Identity Provider)
#========================================================================================================================
# NOTE: Authentik is OPTIONAL and commented out by default in docker-compose.yml
# Only configure these if you want to use Authentik instead of Google OAuth
#
# Quick Setup:
#   1. Run: ./assets/setup-authentik.sh (auto-generates all values)
#   2. Or manually generate:
#      - AUTHENTIK_SECRET_KEY=$(openssl rand -base64 60)
#      - AUTHENTIK_POSTGRES_PASSWORD=$(openssl rand -base64 32)
#   3. Uncomment compose/authentik.yml in docker-compose.yml
#   4. Run: docker compose up -d
#
# Documentation: jacker-docs/docs/guides/authentik.md
# Migration Guide: jacker-docs/docs/guides/authentik-migration.md
#
# AUTHENTIK_VERSION=2024.10.4
# AUTHENTIK_SECRET_KEY=
# AUTHENTIK_POSTGRES_PASSWORD=
# AUTHENTIK_POSTGRES_DB=authentik
# AUTHENTIK_POSTGRES_USER=authentik
# AUTHENTIK_API_TOKEN=
# AUTHENTIK_LOG_LEVEL=info

