    {
      "id": 6,
      "title": "Vulnerabilities by Severity Over Time",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "trivy_vulnerabilities_total{severity=\"CRITICAL\"}",
          "refId": "A",
          "legendFormat": "{{container}} - CRITICAL"
        },
        {
          "expr": "trivy_vulnerabilities_total{severity=\"HIGH\"}",
          "refId": "B",
          "legendFormat": "{{container}} - HIGH"
        },
        {
          "expr": "trivy_vulnerabilities_total{severity=\"MEDIUM\"}",
          "refId": "C",
          "legendFormat": "{{container}} - MEDIUM"
        },
        {
          "expr": "trivy_vulnerabilities_total{severity=\"LOW\"}",
          "refId": "D",
          "legendFormat": "{{container}} - LOW"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "logBase": 1,
          "show": true
        },
        {
          "format": "short",
          "label": null,
          "logBase": 1,
          "show": true
        }
      ],
      "xaxis": {
        "mode": "time",
        "show": true
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 5,
      "legend": {
        "show": true,
        "alignAsTable": true,
        "avg": false,
        "max": true,
        "min": false,
        "current": true
      },
      "seriesOverrides": [
        {
          "alias": "/CRITICAL/",
          "color": "#E02F44"
        },
        {
          "alias": "/HIGH/",
          "color": "#FF780A"
        },
        {
          "alias": "/MEDIUM/",
          "color": "#FFEE52"
        },
        {
          "alias": "/LOW/",
          "color": "#73BF69"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-uid"
      }
    },
    {
      "id": 7,
      "title": "Scan Performance",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
