# {STACK_NAME} Environment Configuration
# ============================================================================
# Copy this file to .env and configure the values below
# ============================================================================

# GENERAL SETTINGS
#========================================================================================================================
# User and Group IDs for file permissions
PUID=1000
PGID=1000

# Timezone (TZ database name)
# Examples: UTC, Europe/Madrid, America/New_York, Asia/Tokyo
TZ=UTC

# DOMAIN CONFIGURATION
#========================================================================================================================
# Your public domain name (without protocol)
PUBLIC_FQDN=example.com

# Service subdomain (service will be accessible at: https://{SERVICE_SUBDOMAIN}.{PUBLIC_FQDN})
SERVICE_SUBDOMAIN={service-name}

# PATHS
#========================================================================================================================
# Base directories for data storage
STACKDIR=$(pwd)
DATADIR=${STACKDIR}/data
CONFIGDIR=${STACKDIR}/config
SECRETSDIR=${STACKDIR}/secrets

# SERVICE CONFIGURATION
#========================================================================================================================
# {Service Name} specific settings

# Service port (internal)
{SERVICE}_PORT=80

# Service settings
{SERVICE}_SETTING1=value1
{SERVICE}_SETTING2=value2

# DATABASE CONFIGURATION (if applicable)
#========================================================================================================================
# Database type: mysql, postgres, mongodb, etc.
DB_TYPE=mysql

# Database connection settings
DB_HOST={db-service}
DB_PORT=3306
DB_NAME={stack_name}_db
DB_USER={stack_name}_user
DB_PASSWORD=changeme_generate_strong_password

# Root password (if applicable)
DB_ROOT_PASSWORD=changeme_generate_strong_password

# REDIS/CACHE CONFIGURATION (if applicable)
#========================================================================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# SMTP/EMAIL CONFIGURATION (if applicable)
#========================================================================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=noreply@${PUBLIC_FQDN}
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# AUTHENTICATION (if applicable)
#========================================================================================================================
# Admin user credentials
ADMIN_USER=admin
ADMIN_PASSWORD=changeme_generate_strong_password
ADMIN_EMAIL=admin@${PUBLIC_FQDN}

# API Keys (if applicable)
API_KEY=
API_SECRET=

# NETWORKING (if applicable)
#========================================================================================================================
# Docker networks
NETWORK_NAME={stack_name}_network
NETWORK_SUBNET=192.168.100.0/24

# TRAEFIK CONFIGURATION
#========================================================================================================================
# Traefik router name
TRAEFIK_ROUTER={service-name}-rtr

# Traefik middleware chain
# Options: chain-oauth@file (with OAuth), chain-no-oauth@file (without OAuth)
TRAEFIK_MIDDLEWARE=chain-oauth@file

# TLS configuration
TRAEFIK_TLS_CERTRESOLVER=letsencrypt
TRAEFIK_TLS_DOMAIN=${PUBLIC_FQDN}

# SECURITY
#========================================================================================================================
# Enable/disable OAuth protection
OAUTH_ENABLED=true

# Enable/disable CrowdSec protection
CROWDSEC_ENABLED=true

# Security settings
SECURITY_SALT=changeme_generate_random_salt
SECRET_KEY=changeme_generate_random_key

# BACKUP CONFIGURATION (if applicable)
#========================================================================================================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"

# Backup destination
BACKUP_DIR=${STACKDIR}/backups

# LOGGING & MONITORING (if applicable)
#========================================================================================================================
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# Enable metrics export
METRICS_ENABLED=false
METRICS_PORT=9090

# ADVANCED SETTINGS
#========================================================================================================================
# Feature flags
FEATURE_FLAG_1=false
FEATURE_FLAG_2=true

# Performance tuning
WORKERS=4
MAX_CONNECTIONS=100
TIMEOUT=30

# Resource limits (if using Docker deploy limits)
CPU_LIMIT=1.0
MEMORY_LIMIT=1G

# DEVELOPMENT/DEBUG (optional - remove in production)
#========================================================================================================================
DEBUG=false
DEV_MODE=false

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
#
# NOTES:
# - Generate strong random passwords: openssl rand -base64 32
# - Change all default passwords before deployment
# - Keep this file secure and never commit to version control
# - Backup this file along with your data
#
# For more information, see README.md
# ============================================================================
